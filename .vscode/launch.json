    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development",
                "HOST": "127.0.0.1",
                "DATABASE": "eventDB",
                "DB_PORT": "5432",
                "USER": "postgres",
                "PASSWORD": "root",
                "BASE_URL": "/api",
                "DEBUG": "True",
                "PORT": "5000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}